#!/usr/bin/env zsh

ls "$LS_DEFAULT_SWITCHES" "$LS_LL_DEFAULT_SWITCHES" $@ | \
  awk '{
      # Thanks goes out to Blaenk Denum for this awk bit: \
      # <http://www.blaenkdenum.com/posts/dots/> \
      k=0; \
      for(i = 0; i <= 8; i++) \
          k += ((substr($1, i + 2, 1) ~ /[rwx]/) * 2 ^ (8 - i)); \
      if (k) \
          printf ("%0o ",k); \
      print \
  }'
