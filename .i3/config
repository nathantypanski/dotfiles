#          inactive_workspace #073642 #00141a #839496
#      }
#  }

# Hide vertical borders at screen edges
# hide_edge_borders both

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Window list
bindsym $mod+equal exec 'bin/i3/winmenu.py'

# Show the first scratchpad window
bindsym $mod+minus scratchpad show

# search for a a program by name
bindsym $mod+n exec python ~/bin/i3-wm-scripts/nextfind.py

# mark a window
bindsym $mod+m exec ~/bin/i3-wm-scripts/mark

# unmark a window
bindsym $mod+u exec ~/bin/i3-wm-scripts/unmark

# use dmenu to jump back to a mark
bindsym $mod+g exec ~/bin/i3-wm-scripts/goto

# go to my web browser
bindsym $mod+b exec python ~/bin/i3-wm-scripts/nextmatch.py '(chromium|firefox)'

# open ranger
bindsym $mod+d exec "termite -e ranger"

# Use compositing
# exec --no-startup-id compton -I .04 -O .04 -b -f -D 5 &

exec --no-startup-id 'firefox'

#exec --no-startup-id i3-msg 'workspace 9; exec bin/urxvt.sh -e irssi; workspace 1'
exec --no-startup-id 'unclutter'
exec --no-startup-id 'bin/dzen/dz.sh'

# The IPC interface allows programs like an external workspace bar
# (i3-wsbar) or i3-msg (can be used to "remote-control" i3) to work.
ipc-socket ~/.i3/ipc.sock
